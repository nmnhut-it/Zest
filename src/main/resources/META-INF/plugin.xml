        <!-- Register the intention action -->
        <intentionAction>
            <className>com.zps.zest.inlinechat.InlineChatIntentionAction</className>
            <category>Zest</category>
            <descriptionDirectoryName>InlineChatIntentionAction</descriptionDirectoryName>
        </intentionAction>

